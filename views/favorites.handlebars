{{> header}}

<div class="container">
    <div class="jumbotron">
        <h1>Favorite Articles</h1>
        <p>Manage your favorite articles here</p>
    </div>

    <div class="list-group">
        {{#each doc}}
            <div class="list-group-item">
                <div class="row">
                    <div class="col-xs-12 col-sm-10">
                        <h4 class="list-group-item-heading">{{this.title}}</h4>
                        <a target="_blank" class="list-group-item-text" href="{{this.link}}">{{this.link}}</a>
                    </div>
                    <div class="col-sm-2">
                        <div class="row">
                            <form action="/favorite-articles/{{this._id}}" method="post">
                                <input type="hidden" name="type" value="unfavorite"/>
                                <div class="col-xs-12 text-center">
                                    <button type="submit" class="btn btn-danger btn-xs">Unfavorite</button>
                                </div>
                            </form>
                        </div>
                        <div class="row">
                            <form action="/notes/{{this._id}}" method="get">
                                <div class="col-xs-12 text-center">
                                    <button type="submit" class="btn btn-info btn-xs">Notes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="list-group-item">No Articles</div>
        {{/each}}
    </div>
</div>

