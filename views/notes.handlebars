{{> header}}

<div class="container">
    <div class="row">
        <form action="/notes/{{id}}" method="post">
            <label for="note-title">Title:</label>
            <input type="text" class="form-control" id="note-title" name="title" />
            <label for="comment">Comment:</label>
            <textarea class="form-control" rows="3" name="body" id="comment"></textarea>
            <div class="col-xs-12">
                <button type="submit" class="btn btn-success btn-sm">Save Note</button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="list-group">
            {{#each notes}}
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-xs-12 col-sm-10">
                            <h4 class="list-group-item-heading">{{this.title}}</h4>
                            <p class="list-group-item-text">{{this.body}}</p>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="list-group-item">No Notes</div>
            {{/each}}
        </div>
    </div>
</div>