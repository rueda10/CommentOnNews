{{> header}}

<div class="container">
    <div class="jumbotron">
        <h1>Comment on News</h1>
        <p>Get news from echojs.com and save notes on the scrapped articles.</p>
    </div>

    <div class="list-group">
        {{#each doc}}
            <div class="list-group-item">
                <div class="row">
                    <div class="col-xs-12 col-sm-10">
                        <h4 class="list-group-item-heading">{{this.title}}</h4>
                        <a target="_blank" class="list-group-item-text" href="{{this.link}}">{{this.link}}</a>
                    </div>
                    <div class="col-sm-2">
                        {{#if this.saved}}
                            <form action="/favorite-articles/{{this._id}}" method="post">
                                <input type="hidden" name="type" />
                                <div class="col-xs-12">
                                    <!--<button type="submit" class="btn btn-link btn-lg btn-block"><span class="glyphicon glyphicon-star" aria-hidden="true"></span></button>-->
                                    <button type="submit" class="btn btn-danger btn-xs">Unfavorite</button>
                                </div>
                            </form>
                        {{else}}
                            <form action="/favorite-articles/{{this._id}}" method="post">
                                <input type="hidden" name="type" value="favorite"/>
                                <div class="col-xs-12">
                                    <!--<button type="submit" class="btn btn-link btn-lg btn-block"><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></button>-->
                                    <button type="submit" class="btn btn-primary btn-xs">Favorite</button>
                                </div>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{else}}
            <div class="list-group-item">No Articles</div>
        {{/each}}
    </div>

</div>



